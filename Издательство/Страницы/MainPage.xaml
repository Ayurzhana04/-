<Page x:Class="Издательство.Страницы.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Издательство.Страницы"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
       
        <Frame Name="frameToBasePages" Grid.Column="1"/>
        <Grid Background="#228b22">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="77"/>
                <RowDefinition Height="77"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
       
            <Image Source="/Картинки/logo.png" Height="100" Grid.RowSpan="2"/>

            <Button Grid.Row="2" Click="AuthorClick">Авторы</Button>
            <Button Grid.Row="3" Click="PublicClick">Публикации</Button>
            <Button Grid.Row="8">Выход</Button>
        </Grid>
    </Grid>
</Page>
