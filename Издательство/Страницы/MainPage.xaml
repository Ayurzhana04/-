<Page x:Class="Издательство.Страницы.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Издательство.Страницы"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
       
        <Frame Name="frameToBasePages" Grid.Column="1"/>
        <StackPanel Orientation="Vertical" Background="#228b22">
            <Image Source="/Картинки/logo.png" Height="120"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
            <Button Grid.Row="0">Авторы</Button>
            <Button Grid.Row="1">Клиенты</Button>
            <Button Grid.Row="2">Публикации</Button>

        </StackPanel>
    </Grid>
</Page>
