<Page x:Class="Издательство.Страницы.RememberPassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Издательство.Страницы"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="RememberPassPage"
      Background="#228b22">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="30" Margin="0,5,0,5" Width="391">Введите имя</TextBlock>
        <TextBox x:Name="NameBox" Grid.Row="2" Margin="200,5,200,5"/>
        <TextBlock Grid.Row="3" HorizontalAlignment="Center" FontSize="30">Введите ваш табельный номер</TextBlock>
        <TextBox x:Name="tabnumBox" Grid.Row="4" Margin="200,5,200,5"/>
        <Button Grid.Row="5" Click="ShowPassword" FontSize="30" Margin="200,20,200,20">Напомнить</Button>

    </Grid>
</Page>
